#!/bin/sh
N=/dev/null
BN=$(basename $0)
EL=/opt/bin/$BN
EP=/var/lib/$BN
Load() {
echo "$1 $BN"
D=docker
export DOCKER_HOST=unix:///run/early-$D.sock
IM=steigr/cluster-element
$D pull $IM >$N
ID=$($D run -d $IM:latest /bin/true)
mkdir -p $EP
$D export $ID | tar -x -C $EP -f -
$D kill $ID >$N
$D rm $ID >$N
$D rmi $IM >$N
}
Install() {
echo "$1 $BN"
cat <<EOLD > $0
#!/bin/bash
sudo systemd-nspawn --directory=$EP --capability=all --share-system --user=root --quiet --bind=/home:/home --bind=/opt:/opt --bind=/run:/run --bind=/run:/var/run  --bind=/etc/systemd:/etc/systemd \$(basename \$0) "\$@"
EOLD
}
[[ -d "$EP" ]] || Load Load
Install Install
$0 $@