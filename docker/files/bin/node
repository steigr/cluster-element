#!/bin/bash

. /etc/node/environment

case "$1/$2" in
  node/install)
    test -d $3 && (cd $3; git reset --hard; git pull) || git clone $GIT_REPO $3
  ;;
  link/modules)
    cp $WRAPPER /opt/$WRAPPER 
    $0 list modules | while read module; do ln -s $WRAPPER /opt/bin/$module; done
  ;;
  list/modules)
    echo "ruby irb pry bundler node"
  ;;
esac
